<!DOCTYPE html>
<html>
  <head>
    <title>Recipr</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>
  <body>
    
    <div id="main-container" class='container no-padding background-white'>
      <div class="header no-margin no-padding">
        <div class="float-right padding-05">
          <% if user_signed_in? %>
            <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>        
          <% else %>
            <%= link_to('Login', new_user_session_path)  %>  
          <% end %>
        </div>
      </div>
      <div id="pages-nav">
        <ul>
          <% if user_signed_in? %>
            <li><%= link_to('Recipes', recipe_index_path) %></li>
          <% end %>
        </ul>
      </div>
  
      <div class="row no-padding">
      	<div class="span12 padding-25">
      		<%= yield %>
      	</div>
      </div>
      <div class="row padding-15">
        <div class="col-xs-12">
        </div>
      </div>
    </div><!-- end container -->
    
  </body>
</html>
