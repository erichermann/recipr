<div class="col-xs-12">  <h2><%=@recipe.title %></h2>  <div class="col-xs-8">    <h3>Ingredients:</h3>    <ol>      <% @recipe.recipe_ingredients.each do |ingredient| %>        <li><%=ingredient.ingredient_name %></li>      <% end %>    </ol>        <h3>Steps:</h3>    <ol>      <% @recipe.recipe_steps.each do |step| %>        <li><%=step.step_name %></li>      <% end %>    </ol>  </div></div>